---
import Svg from "./Svg.astro"
const { main }  = Astro.locals;
---
<div
    id="loading-overlay"
    class="absolute inset-0 flex items-center justify-center bg-white/80 z-30 opacity-0 pointer-events-none transition-opacity duration-500"
>
    <div class="flex flex-col items-center">
        <div id="loading-spinner" class="flex flex-col items-center">
        <Svg src="loading" />
        <span class="text-blue-700 font-semibold">{main.loading}</span>
        </div>
        <span
        id="loading-error"
        class="hidden text-red-500 font-semibold text-center mt-2"></span>
    </div>
</div>
