---
import SidebarNavItem from "Components/SidebarNavItem.astro";

interface Link {
  href: string;
  title: string;
  icon: string;
  free?: boolean;
}

const { title, links } = Astro.props;
---
<h2
  class="flex items-center text-xs font-semibold leading-6 text-gray-400 mb-1"
>
  {title}
</h2>
<ul class="flex flex-col gap-y-1">
  {links.map((link: Link) => (
    <li>  
      <SidebarNavItem 
        href={link.href}
        title={link.title} 
        icon={link.icon}
        isFree={link.free}
      />
    </li>
))}
</ul>
